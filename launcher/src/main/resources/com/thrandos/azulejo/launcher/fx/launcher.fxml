<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.web.WebView?>

<BorderPane xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.thrandos.azulejo.launcher.fx.LauncherController">
   <top>
      <MenuBar BorderPane.alignment="CENTER">
        <menus>
          <Menu mnemonicParsing="false" text="File">
            <items>
              <MenuItem fx:id="refreshMenuItem" mnemonicParsing="false" text="Refresh" />
                  <SeparatorMenuItem />
              <MenuItem mnemonicParsing="false" text="Exit" />
            </items>
          </Menu>
          <Menu mnemonicParsing="false" text="Edit">
            <items>
              <MenuItem fx:id="optionsMenuItem" mnemonicParsing="false" text="Options..." />
            </items>
          </Menu>
            <Menu mnemonicParsing="false" text="Help">
              <items>
                <MenuItem fx:id="aboutMenuItem" mnemonicParsing="false" text="About" />
              </items>
            </Menu>
        </menus>
      </MenuBar>
   </top>
   <center>
      <SplitPane dividerPositions="0.3" BorderPane.alignment="CENTER">
         <items>
            <VBox spacing="10.0">
               <children>
                  <Label text="Game Instances" />
                  <TableView fx:id="instanceTable" VBox.vgrow="ALWAYS">
                    <columns>
                      <TableColumn fx:id="nameColumn" prefWidth="150.0" text="Name" />
                      <TableColumn fx:id="versionColumn" prefWidth="100.0" text="Version" />
                    </columns>
                  </TableView>
                  <HBox spacing="10.0">
                     <children>
                        <Button fx:id="launchButton" defaultButton="true" text="Launch" />
                        <CheckBox fx:id="updateCheck" selected="true" text="Update" />
                     </children>
                  </HBox>
               </children>
               <padding>
                  <Insets bottom="10.0" left="10.0" right="5.0" top="10.0" />
               </padding>
            </VBox>
            <VBox>
               <children>
                  <Label text="News" />
                  <WebView fx:id="newsWebView" VBox.vgrow="ALWAYS" />
               </children>
               <padding>
                  <Insets bottom="10.0" left="5.0" right="10.0" top="10.0" />
               </padding>
            </VBox>
         </items>
      </SplitPane>
   </center>
</BorderPane>